<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.itheima.mapper.ShoppingCartMapper">
    <delete id="deleteById">
        DELETE FROM shopping_cart WHERE id = #{id}
    </delete>


    <select id="list" resultType="com.itheima.pojo.entity.ShoppingCart">
        SELECT *
        FROM shopping_cart
        WHERE user_id = #{userId}
        <if test="dishId != null">
            AND dish_id = #{dishId}
        </if>
        <if test="setmealId != null">
            AND setmeal_id = #{setmealId}
        </if>
        <if test="dishFlavor != null and dishFlavor != ''">
            AND dish_flavor = #{dishFlavor}
        </if>
    </select>
    <select id="selectByUserAndDishOrSetmeal" resultType="com.itheima.pojo.entity.ShoppingCart">
        SELECT *
        FROM shopping_cart
        WHERE user_id = #{userId}
        <if test="dishId != null">
            AND dish_id = #{dishId}
        </if>
        <if test="setmealId != null">
            AND setmeal_id = #{setmealId}
        </if>
        LIMIT 1
    </select>
</mapper>
